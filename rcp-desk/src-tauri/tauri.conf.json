{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RCP Desk",
  "version": "0.1.0",
  "identifier": "com.open-rcp.rcp-desk",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "RCP Desk",
        "width": 1024,
        "height": 768
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": "icons/32x32.png"
  }
}
